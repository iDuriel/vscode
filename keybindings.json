[
    // Cursor
    {"key": "ctrl+up",     "command": "editor.action.insertCursorAbove"},
    {"key": "ctrl+down",   "command": "editor.action.insertCursorBelow"},
    {"key": "ctrl+home",   "command": "cursorHomeSelect"},
    {"key": "ctrl+end",    "command": "cursorEndSelect"},
    {"key": "ctrl+f",      "command": "editor.action.formatDocument"},
    {"key": "ctrl+h",      "command": "editor.action.selectHighlights"},

    // IDE shortcuts
    {"key": "alt+1",       "command": "workbench.action.moveEditorToNextGroup"},
    {"key": "alt+v",       "command": "editor.action.peekDefinition"},
    {"key": "alt+shift+v", "command": "editor.action.goToReferences"},
    {"key": "alt+a",       "command": "workbench.action.previousEditor"},
    {"key": "alt+d",       "command": "workbench.action.nextEditor"},
    {"key": "alt+g",       "command": "workbench.action.quickOpen"},
    {"key": "alt+c",       "command": "workbench.action.closeActiveEditor"},
    {"key": "alt+s",       "command": "actions.find"},
    {"key": "alt+shift+s", "command": "workbench.action.findInFiles"},
    {"key": "alt+e",       "command": "workbench.view.explorer"},
    {"key": "alt+q",       "command": "workbench.action.toggleSidebarVisibility"},
    {"key": "alt+oem_2",   "command": "workbench.panel.chat.view.copilot.focus"},
    {"key": "alt+n",       "command": "workbench.action.chat.newChat", "when": "chatIsEnabled && inChat"},
    {"key": "alt+t",       "command": "workbench.action.terminal.toggleTerminal"}
]
